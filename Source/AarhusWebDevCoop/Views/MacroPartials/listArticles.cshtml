@inherits Umbraco.Web.Macros.PartialViewMacroPage

@* OrderBy() takes the property to sort by and optionally order desc/asc *@

@foreach (var page in CurrentPage.Children.Where("Visible").OrderBy("CreateDate desc"))
{ 
    <div class="article">
        <div class="articletitle"><a href="@page.Url"></a><h3>@page.Name</h3></div>
        <div class="articlepreview">@Umbraco.Truncate(@page.articleContent,100) <a href="@page.Url">Read More..</a></div>
    </div>
    <hr/>
}